# NetNinja Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_NAME=app.db
DATABASE_SERVER=localhost
DATABASE_PORT=1433
DATABASE_USERNAME=user
DATABASE_PASSWORD=pass

# ============================================================================
# Email Configuration
# ============================================================================
# Email subject for daily reports
EMAIL_SUBJECT=Daily Network Check

# SMTP server settings
EMAIL_SERVER=smtp.gmail.com
EMAIL_PORT=587

# SMTP authentication
EMAIL_USERNAME=your.email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Sender email address (appears in "From" field)
EMAIL_SENDER=your.email@gmail.com

# Sender display name (appears with sender email)
EMAIL_SENDER_ALIAS=NetNinja Monitor

# CC recipients (comma-separated, leave empty for none)
EMAIL_CC_ADDRESS=

# ============================================================================
# Execution Configuration
# ============================================================================
# Maximum concurrent scraping operations (default: 2)
EXEC_SEMAPHORE_LIMIT=2

# Maximum retry attempts for failed scraping operations (default: 1)
EXEC_MAX_RETRY_ATTEMPTS=1

# ============================================================================
# Speed Test Configuration
# ============================================================================
# Download chunk size in bytes (default: 102400 = 100KB)
SPEEDTEST_DOWNLOAD_CHUNK_SIZE=102400

# Upload chunk size in bytes (default: 4194304 = 4MB)
SPEEDTEST_UPLOAD_CHUNK_SIZE=4194304

# Number of concurrent test connections (default: 10)
SPEEDTEST_TEST_COUNT=10

# Number of latency test attempts (default: 3)
SPEEDTEST_LATENCY_TEST_COUNT=3

# Timeout for speed test operations in seconds (default: 30)
SPEEDTEST_TIMEOUT=30

# Maximum time for download test in seconds (default: 15)
SPEEDTEST_MAX_DOWNLOAD_TIME=15

# Maximum time for upload test in seconds (default: 10)
SPEEDTEST_MAX_UPLOAD_TIME=10

# ============================================================================
# Notes
# ============================================================================
# For Gmail:
# 1. Enable 2-factor authentication on your Google account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the App Password as EMAIL_PASSWORD
#
# For other SMTP servers:
# - Adjust EMAIL_SERVER and EMAIL_PORT accordingly
# - Some servers may require different TLS settings
#
# For Credential Encryption:
# - On first run, a .secret.key file will be created automatically
# - IMPORTANT: Back up this key file! Without it, encrypted passwords cannot be recovered
# - Existing passwords will be automatically encrypted on next run
